pipeline {
    agent any 
    stages {
        stage('Build') {
            steps {
                echo 'Compilando la aplicaci√≥n...'
                sh './mvnw clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Ejecutando pruebas unitarias...'
                sh './mvnw test'
            }
        }
        stage('Deploy a Staging') {
            steps {
                echo 'Desplegando en servidor de pruebas...'
            }
        }
    }
}